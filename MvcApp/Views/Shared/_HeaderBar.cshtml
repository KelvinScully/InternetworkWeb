@using System.Security.Claims
@{
    var username = User.Identity?.IsAuthenticated == true ? User.Identity.Name : "Guest";
    var roles = User.Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value).ToList();
    var highestRole = roles.Any() ? roles.First() : "Guest";
    var isGuest = roles.Contains("Guest");
}

<div style="">
    <div class="container">
        <div class="row align-items-center py-2">
            <div class="col-auto">
                <a class="btn" type="button" href="/">Home</a>
                <a class="btn" type="button" href="/Account">Account</a>
                <a class="btn" type="button" href="/Inventory">Inventory</a>
            </div>
            <div class="col"></div>
            <div class="col-auto d-flex align-items-center" style="gap:10px;">
                <!--<button class="btn"> -->
                <!--    <i class="bi bi-bell"></i> -->
                <!--</button> -->
                <button class="btn" id="darkModeToggle" title="Toggle Dark Mode">
                    <i class="bi bi-moon" id="darkModeIcon"></i>
                </button>
                <div class="d-flex align-items-center" style="gap:12px; min-width:150px;">
                    @if (!isGuest)
                    {
                        <!-- Account Link -->
                        <a href="/Entry" class="d-flex align-items-center text-decoration-none" style="gap:12px;">
                            <i class="bi bi-person-circle" style="font-size:2rem; color:#31a5a2;"></i>
                            <div>
                                <div style="font-weight:700;">@username</div>
                                <div style="font-size:0.99rem; color:#768390;">@highestRole</div>
                            </div>
                        </a>
                        <!-- Logout Button -->
                        <form method="post" action="/Entry/Logout" class="m-0">
                            <button type="submit" class="btn btn-link p-0" title="Logout" style="color:#dc3545;">
                                <i class="bi bi-box-arrow-right" style="font-size:1.7rem;"></i>
                            </button>
                        </form>
                    }
                    else
                    {
                        <a href="/Entry" class="d-flex align-items-center text-decoration-none" style="gap:12px;">
                            <i class="bi bi-person-circle" style="font-size:2rem; color:#31a5a2;"></i>
                            <div>
                                <div style="font-weight:700;">Login</div>
                            </div>
                        </a>
                    }
                </div>

            </div>
        </div>
    </div>
</div>