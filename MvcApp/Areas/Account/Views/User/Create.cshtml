@using MvcApp.Areas.Account.Models
@model UserModel
@{
    ViewData["Title"] = "Create User";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block bg-light sidebar border-end vh-100 p-3">
            @await Html.PartialAsync("../Shared/SidebarNav.cshtml", "Create User")
        </nav>

        <!-- Main content -->
        <main class="col-md-10 ms-sm-auto px-4 pt-4">
            <div class="text-center mb-4">
                <h1 class="fw-bold text-primary">@ViewData["Title"]</h1>
                <h4 class="text-muted">Register a new user account with default settings</h4>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form asp-area="Account" asp-controller="User" asp-action="Insert" method="post">
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Username</label>
                                <input type="text" asp-for="UserName" class="form-control" placeholder="Enter Username" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Email</label>
                                <input type="email" asp-for="UserEmail" class="form-control" placeholder="Enter Email" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Password</label>
                                <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password" />
                            </div>
                        </div>

                        <hr />

                        <div class="row justify-content-end">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                            <div class="col-auto">
                                <a asp-area="Account" asp-controller="User" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info text-center shadow-sm" role="alert">
                <strong>Note:</strong> New users will be assigned default roles unless specified later.
            </div>
        </main>
    </div>
</div>
