@using MvcApp.Areas.Account.Models
@model List<UserModel>;
@{
    ViewData["Title"] = "User Management";
}
<div class="container-fluid">
    <div class="row">
        <nav class="col-md-1 d-none d-md-block sidebar">
            @await Html.PartialAsync("../Shared/SidebarNav.cshtml", "Index User")
        </nav>
        <div class="col-xl-10 px-4">
            <div class="row">
                <div class="col-6"><h1>@ViewData["Title"]</h1></div>
                <div class="col-6 text-end">
                    @if (Model.Count > 0)
                    {
                        @if (Model[0].ShowInactive)
                        {
                            <a asp-action="Index" asp-route-ShowInactive="false" class="btn btn-secondary">Hide Deleted</a>
                        }
                        else
                        {
                            <a asp-action="Index" asp-route-ShowInactive="true" class="btn btn-secondary">Show Deleted</a>
                        }
                    }
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Roles</th>              <!-- ← new column -->
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.UserEmail</td>
                            <td>
                                @if (user.UserRoles != null && user.UserRoles.Any())
                                {
                                    @string.Join(", ", user.UserRoles.Select(r => r.UserRoleName))
                                }
                                else
                                {
                                    <em>— none —</em>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="Assign" asp-route-id="@user.UserId" class="btn btn-sm btn-info">Assign Roles</a>
                                @if (user.IsActive)
                                {
                                    <form asp-action="Delete" asp-route-id="@user.UserId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
