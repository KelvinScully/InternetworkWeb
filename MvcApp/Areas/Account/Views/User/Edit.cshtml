@using MvcApp.Areas.Account.Models
@model UserModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block bg-light sidebar border-end vh-100 p-3">
            @await Html.PartialAsync("../Shared/SidebarNav.cshtml", "Edit User")
        </nav>

        <!-- Main content -->
        <main class="col-md-10 ms-sm-auto px-4 pt-4">
            <div class="text-center mb-4">
                <h1 class="fw-bold text-primary">@ViewData["Title"]</h1>
                <h4 class="text-muted">Update user details and account information</h4>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form asp-area="Account" asp-controller="User" asp-action="Update" method="post">
                        <input type="hidden" asp-for="UserId" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Username</label>
                                <input type="text" asp-for="UserName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input type="email" asp-for="UserEmail" class="form-control" />
                            </div>
                        </div>

                        <hr />

                        <div class="row justify-content-end">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                            <div class="col-auto">
                                <a asp-area="Account" asp-controller="User" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info text-center shadow-sm" role="alert">
                <strong>Note:</strong> Only active users can be updated. Role assignment is handled separately.
            </div>
        </main>
    </div>
</div>
