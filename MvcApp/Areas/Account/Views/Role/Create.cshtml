@using MvcApp.Areas.Account.Models
@model UserRoleModel;
@{
    ViewData["Title"] = "Create Role";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block bg-light sidebar border-end vh-100 p-3">
            @await Html.PartialAsync("../Shared/SidebarNav.cshtml", "Create Role")
        </nav>

        <!-- Main content -->
        <main class="col-md-10 ms-sm-auto px-4 pt-4">
            <div class="text-center mb-4">
                <h1 class="fw-bold text-primary">@ViewData["Title"]</h1>
                <h4 class="text-muted">Define a new user role for the system</h4>
            </div>

            <!-- Optional error message -->
            @if (ViewData["Error"] != null && ViewData["Error"].ToString().Length > 0)
            {
                <div class="alert alert-danger text-center" role="alert">
                    @ViewData["Error"]
                </div>
            }

            <!-- Create form -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form asp-area="Account" asp-controller="Role" asp-action="Insert" method="post">
                        <div class="mb-3">
                            <label asp-for="UserRoleName" class="form-label">Role Name</label>
                            <input asp-for="UserRoleName" class="form-control" placeholder="Enter Role Name" />
                            <span asp-validation-for="UserRoleName" class="text-danger"></span>
                        </div>

                        <div class="row justify-content-end mt-4">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">Create Role</button>
                            </div>
                            <div class="col-auto">
                                <a asp-area="Account" asp-controller="Role" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info text-center shadow-sm" role="alert">
                <strong>Note:</strong> New roles will be available immediately after creation.
            </div>
        </main>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
