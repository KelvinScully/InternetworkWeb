@using System.Security.Claims
@using MvcApp.Areas.Account.Models
@model List<UserRoleModel>
@{
    ViewData["Title"] = "Role Management";
    var roles = User.Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value).ToList();

    var keywords = new[] { "SuperAdmin", "Admin", "Account Manager" };
    bool isAllowed = roles.Any(role => keywords.Any(keyword => role.Contains(keyword)));
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block bg-light sidebar border-end vh-100 p-3">
            @await Html.PartialAsync("../Shared/SidebarNav.cshtml", "Index Role")
        </nav>

        <!-- Main content -->
        <main class="col-md-10 ms-sm-auto px-4 pt-4">
            <div class="text-center mb-4">
                <h1 class="fw-bold text-primary">@ViewData["Title"]</h1>
                <h4 class="text-muted">Manage system roles and permissions</h4>
            </div>

            @if (Model.Count > 0)
            {
                <div class="text-end mb-3">
                    @if (isAllowed)
                    {
                        @if (Model[0].ShowInactive)
                        {
                            <a asp-action="Index" asp-route-ShowInactive="false" class="btn btn-outline-secondary">Hide Deleted</a>
                        }
                        else
                        {
                            <a asp-action="Index" asp-route-ShowInactive="true" class="btn btn-outline-secondary">Show Deleted</a>
                        }
                    }
                </div>
            }

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">🔐 Role List</h5>
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Role Name</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.UserRoleName</td>
                                    @if (isAllowed)
                                    {
                                        <td class="text-center">
                                            @if (!string.Equals(role.UserRoleName, "SuperAdmin"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@role.UserRoleId" class="btn btn-sm btn-primary me-1">Edit</a>
                                                @if (role.IsActive)
                                                {
                                                    <form asp-action="Delete" asp-route-id="@role.UserRoleId" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                    </form>
                                                }
                                            }
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="alert alert-info text-center shadow-sm" role="alert">
                <strong>Note:</strong> Roles define access levels and permissions across the application.
            </div>
        </main>
    </div>
</div>
