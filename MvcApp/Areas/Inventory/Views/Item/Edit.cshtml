@model MvcApp.Areas.Inventory.Models.ItemModel
@{
    ViewData["Title"] = "Edit Item";

    var categories = ViewData["Categories"] as SelectList;
    var locations = ViewData["Locations"] as SelectList;
    var statuses = ViewData["Statuses"] as SelectList;
}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block bg-light sidebar border-end vh-100 p-3">
            @await Html.PartialAsync("../Shared/SidebarNav.cshtml", "Create Item")
        </nav>

        <!-- Main content -->
        <main class="col-md-10 ms-sm-auto px-4 pt-4">
            <div class="text-center mb-4">
                <h1 class="fw-bold text-primary">@ViewData["Title"]</h1>
                <h4 class="text-muted">Modify an existing Item</h4>
            </div>

            <!-- Optional error message -->
            @if (ViewData["Error"] != null && ViewData["Error"].ToString().Length > 0)
            {
                <div class="alert alert-danger text-center" role="alert">
                    @ViewData["Error"]
                </div>
            }

            <!-- Edit form -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form asp-area="Inventory" asp-controller="Item" asp-action="Edit" method="post">
                        <input type="hidden" asp-for="ItemId" />

                        <div class="row mb-3">
                            <div class="col-6">
                                <label asp-for="ItemName" class="form-label">Item Name</label>
                                <input asp-for="ItemName" class="form-control" placeholder="Enter Item Name" />
                                <span asp-validation-for="ItemName" class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="ItemQuantity" class="form-label">Quantity</label>
                                <input asp-for="ItemQuantity" class="form-control" placeholder="Enter Quantity Name" />
                                <span asp-validation-for="ItemQuantity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Category Selection</label>
                            <select asp-for="CategoryId" asp-items="categories" class="form-control">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LocationId" class="form-label">Location Selection</label>
                            <select asp-for="LocationId" asp-items="locations" class="form-control">
                                <option value="">-- Select Location --</option>
                            </select>
                            <span asp-validation-for="StatusId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StatusId" class="form-label">Status Selection</label>
                            <select asp-for="StatusId" asp-items="statuses" class="form-control">
                                <option value="">-- Select Status --</option>
                            </select>
                            <span asp-validation-for="StatusId" class="text-danger"></span>
                        </div>

                        <div class="row justify-content-end mt-4">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                            <div class="col-auto">
                                <a asp-area="Inventory" asp-controller="Item" asp-action="Index" asp-route-showInactive="false" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info text-center shadow-sm" role="alert">
                <strong>Note:</strong> New Item will be available immediately after creation.
            </div>
        </main>

        <partial name="_ValidationScriptsPartial" />

    </div>
</div>