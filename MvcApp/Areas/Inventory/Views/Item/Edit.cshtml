@model MvcApp.Areas.Inventory.Models.ItemModel


@{
    var categories = ViewData["Categories"] as SelectList;



    var locations = ViewData["Locations"] as SelectList;



    var statuses = ViewData["Statuses"] as SelectList;
}



<h2>Edit Inventory Item</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="ItemId" />

    <div class="form-group">
        <label asp-for="ItemName"></label>
        <input asp-for="ItemName" class="form-control" />
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItemQuantity"></label>
        <input asp-for="ItemQuantity" class="form-control" />
        <span asp-validation-for="ItemQuantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="categories" class="form-control"></select>
    </div>


    <div class="form-group">
        <label asp-for="LocationId"></label>
        <select asp-for="LocationId" asp-items="locations" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="StatusId"></label>
        <select asp-for="StatusId" asp-items="statuses" class="form-control"></select>
    </div>

    <div class="row justify-content-end p-4">
        <div class="col-2 p-1">
            <button class="btn btn-primary btn-block" id="SubmitButton" type="submit">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                     class="bi bi-caret-up-square" viewBox="0 0 16 16" style="margin-right: 4px;">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                    <path d="M3.544 10.705A.5.5 0 0 0 4 11h8a.5.5 0 0 0 .374-.832l-4-4.5a.5.5 0 0 0-.748 0l-4 4.5a.5.5 0 0 0-.082.537" />
                </svg>
                Submit
            </button>
        </div>
        <div class="col-2 p-1">
            <a class="btn btn-secondary btn-block"
               asp-area="Inventory" asp-controller="Item"
               asp-action="Index" asp-route-showInactive="false">
                Cancel
            </a>
        </div>
    </div>
</form>
