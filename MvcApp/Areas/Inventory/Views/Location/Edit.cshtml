@using MvcApp.Areas.Inventory.Models
@model ItemLocationModel;
@{
    ViewData["Title"] = "Edit Location";
}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block bg-light sidebar border-end vh-100 p-3">
            @await Html.PartialAsync("../Shared/SidebarNav.cshtml", "Edit Location")
        </nav>

        <!-- Main content -->
        <main class="col-md-10 ms-sm-auto px-4 pt-4">
            <div class="text-center mb-4">
                <h1 class="fw-bold text-primary">@ViewData["Title"]</h1>
                <h4 class="text-muted">Modify an existing Location</h4>
            </div>

            <!-- Optional error message -->
            @if (ViewData["Error"] != null && ViewData["Error"].ToString().Length > 0)
            {
                <div class="alert alert-danger text-center" role="alert">
                    @ViewData["Error"]
                </div>
            }

            <!-- Edit form -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form asp-area="Inventory" asp-controller="Location" asp-action="Insert" method="post">
                        <div class="mb-3">
                            <input type="hidden" asp-for="@Model.ItemLocationId" />

                            <label asp-for="ItemLocationName" class="form-label">Location Name</label>
                            <input asp-for="ItemLocationName" class="form-control" />
                            <span asp-validation-for="ItemLocationName" class="text-danger"></span>
                        </div>

                        <div class="row justify-content-end mt-4">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                            <div class="col-auto">
                                <a asp-area="Inventory" asp-controller="Location" asp-action="Index" asp-route-showInactive="false" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info text-center shadow-sm" role="alert">
                <strong>Note:</strong> New Location will be available immediately after creation.
            </div>
        </main>

        <partial name="_ValidationScriptsPartial" />

    </div>
</div>