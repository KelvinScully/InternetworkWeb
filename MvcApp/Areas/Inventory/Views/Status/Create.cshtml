@using MvcApp.Areas.Inventory.Models
@model ItemStatusModel;
@{
    ViewData["Title"] = "Create Status";
}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-1 d-none d-md-block sidebar">
            <!-- Your SidebarNav goes here -->
            @await Html.PartialAsync("../Shared/SidebarNav.cshtml", "Create Status")
        </nav>
        <div class="col-xl-10 px-4">
            <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
                    <h1 class="text-center">@ViewData["Title"]</h1>
                </div>
                <div class="col-3"></div>
                @if (ViewData["Error"] != null && ViewData["Error"].ToString().Length > 0)
                {
                    <h6 class="alert alert-danger" role="alert">@ViewData["Error"]</h6>
                }
            </div>
            <!-- Content goes under here -->
            <form asp-area="Inventory" asp-controller="Status" asp-action="Insert" method="post" id="FormStatus">
                <div class="mb-3 col-md-3">
                    <h5 id="ItemQuantityTitle">Status Name</h5>
                    <div class="mb-3">
                        <input type="text" asp-for="@Model.ItemStatusName" class="form-control" placeholder="Enter Name" />
                    </div>
                </div>

                <div class="dropdown-divider"></div>

                <p>
                    <div class="row justify-content-end p-4">
                        <div class="col-2 p-1">
                            <button class="btn btn-primary btn-block" id="SubmitButton" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-caret-up-square" viewBox="0 0 16 16" style="margin-right: 4px;">
                                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                    <path d="M3.544 10.705A.5.5 0 0 0 4 11h8a.5.5 0 0 0 .374-.832l-4-4.5a.5.5 0 0 0-.748 0l-4 4.5a.5.5 0 0 0-.082.537" />
                                </svg>
                                Submit
                            </button>
                        </div>
                        <div class="col-2 p-1">
                            <a class="btn btn-secondary btn-block"
                               asp-area="Inventory" asp-controller="Status"
                               asp-action="Index" asp-route-showInactive="false">
                                Cancel
                            </a>
                        </div>
                    </div>
                </p>
            </form>

            <div class="col-1"></div>
        </div>
    </div>
</div>