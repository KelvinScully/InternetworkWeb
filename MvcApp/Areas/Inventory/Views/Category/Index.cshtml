@using System.Security.Claims 
@using MvcApp.Areas.Inventory.Models
@model List<ItemCategoryModel>
@{
    ViewData["Title"] = "Category Management";
    var roles = User.Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value).ToList();

    var keywords = new[] { "SuperAdmin", "Admin", "Inventory Manager" };
    bool isAllowed = roles.Any(role => keywords.Any(keyword => role.Contains(keyword)));
}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block bg-light sidebar border-end vh-100 p-3">
            <!-- Your SidebarNav goes here -->
            @await Html.PartialAsync("../Shared/SidebarNav.cshtml", "Index Category")
        </nav>

        <main class="col-md-10 ms-sm-auto px-4 pt-4">
            <div class="text-center mb-4">
                <h1 class="fw-bold text-primary">@ViewData["Title"]</h1>
                <h4 class="text-muted">Manage categories</h4>
            </div>

            @if (Model.Count > 0)
            {
                <div class="text-end mb-3">
                    @if (Model[0].ShowInactive)
                    {
                        <a asp-action="Index" asp-route-ShowInactive="false" class="btn btn-outline-secondary">Hide Deleted</a>
                    }
                    else
                    {
                        <a asp-action="Index" asp-route-ShowInactive="true" class="btn btn-outline-secondary">Show Deleted</a>
                    }
                </div>
            }

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Category List</h5>
                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-light">
                            <tr>
                                <th width="80%">Name</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null || Model.Count > 0)
                            {
                                @foreach (var Category in Model)
                                {
                                    <tr>
                                        <td>@Category.ItemCategoryName</td>
                                        @if (isAllowed)
                                        {
                                            <td>
                                                <a class="btn btn-sm btn-primary me-1" asp-area="Inventory" asp-controller="Category" asp-action="Edit" asp-route-id="@Category.ItemCategoryId">Edit</a>
                                                @if (Category.IsActive)
                                                {
                                                    <form class="d-inline" asp-area="Inventory" asp-controller="Category" asp-action="Delete" asp-route-id="@Category.ItemCategoryId" method="post">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete"
                                                                onclick="return confirm('Are you sure you want to delete this Category?');">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </form>
                                                }
                                            </td>
                                        }
                                        else
                                        {
                                            <td></td>
                                        }
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="alert alert-info text-center shadow-sm" role="alert">
                <strong>Note:</strong> This page allows administrators to manage Item Categories.
            </div>
        </main>
    </div>
</div>